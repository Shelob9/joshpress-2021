{
	"name": "with-tailwindcss",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"test": "jest",
		"wordpress": "wp-env start"
	},
	"dependencies": {
		"@shelob9/block-content": "0.2.0",
		"@tailwindcss/forms": "^0.2.1",
		"@tailwindcss/typography": "^0.4.0",
		"@testing-library/react": "^11.2.3",
		"@wordpress/env": "^3.0.2",
		"add": "^2.0.6",
		"autoprefixer": "^10.0.4",
		"next": "latest",
		"postcss": "^8.1.10",
		"react": "17",
		"react-dom": "17",
		"tailwindcss": "^2.0.2",
		"yarn": "^1.22.10"
	},
	"devDependencies": {
		"@types/node": "^14.14.22",
		"@types/react": "^17.0.0",
		"jest": "^26.6.3",
		"ts-jest": "^26.4.4",
		"typescript": "^4.1.3"
	},
	"jest": {
		"moduleNameMapper": {
			"\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
		},
		"transform": {
			"^.+\\.(ts|tsx)$": "ts-jest"
		},
		"testMatch": [
			"**/__tests__/*.(ts|tsx)",
			"**/components/*.test.(ts|tsx)"
		],
		"setupFilesAfterEnv": [
			"<rootDir>/jest.setup.ts"
		],
		"testPathIgnorePatterns": [
			"./.next/",
			"./node_modules/"
		],
		"globals": {
			"ts-jest": {
				"tsconfig": "tsconfig.jest.json"
			}
		}
	}
}
